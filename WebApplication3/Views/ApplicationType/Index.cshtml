@model IEnumerable<Rocky_Models.ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type list</h2>
        </div>
        <div class="col-6">
            <a asp-action="Upsert" asp-controller="ApplicationType" class="btn btn-primary"> 
              <i class="fa-solid fa-plus"></i> &nbsp; Create new Application Type
            </a>
        </div>
    </div>

    <br/><br/>
    
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Application Type Name
                    </th>
                    <th>
                       Description
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>              
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="10%">@obj.Name</td>
                        <td width="20%">@obj.Description</td>
                        <td width="50%">@obj.Image</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ApplicationType" asp-action="Upsert" asp-route-Id="@obj.Id"
                                   class="btn btn-primary mx-2"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-controller="ApplicationType" asp-action="Delete" asp-route-Id="@obj.Id"
                                   class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Ничего не найдено</p>
    }
</div>